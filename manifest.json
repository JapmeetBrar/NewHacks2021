{

    "name": "Pomodoro Technique",

    "description": "Build an Extension!",

    "version": "1.0",

    "manifest_version": 3,

    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],

    "action": {
        "default_popup": "html/popup.html"
    },

    "content_scripts": [{
        "matches": ["https://www.google.com/"],
        "css": ["/css/background.css"],
        "js": ["/js/background.js"]
    }]
}